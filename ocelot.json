{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/User/login",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "172.18.0.4",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/gateway/User/login",
            "UpstreamHttpMethod": [ "Post" ],
            "DangerousAcceptAnyServerCertificateValidator": true
            // No AuthenticationOptions here
        },
        {
            "DownstreamPathTemplate": "/api/User/addNewUser",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "172.18.0.4",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/gateway/User/addNewUser",
            "UpstreamHttpMethod": [ "Post" ],
            "DangerousAcceptAnyServerCertificateValidator": true
            // No AuthenticationOptions here
        },
        {
            "DownstreamPathTemplate": "/api/User/access",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "172.18.0.4",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/gateway/User/access",
            "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
            "DangerousAcceptAnyServerCertificateValidator": true,
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer"
            }
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "https://172.18.0.5:8095",
        "Logging": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "Ocelot": "Debug" // Set Ocelot specific logging level
            }
        }
    }
}
